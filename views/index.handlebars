<!-- the template that Handlebars renders onto. -->

<h1>Eat Da Burger!</h1>

<div class="columns">
  <div class="column">
   <h2>Burgers to eat!</h2>


    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger_block devoured=true}}//need to change this line
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column">
   <h2>Burgers eaten!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger_block devoured=false}}//need to change this line
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat!
  </div>
<!-- the button that will submit the user input into the database.  -->
  <button type="submit">Add Burger</button>
</form>
