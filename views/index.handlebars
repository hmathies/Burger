<!-- the template that Handlebars renders onto. -->

<div class="hero">
  <div class="container has-text-centered">
    <h1 class="title">
        Eat Da Burger
    </h1>
  </div>
</div>


<div class="container content has-text-centered"> 
  <div class="columns">
    <div class="column">
     <h2 class="eatMenu">Burgers to eat!</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            {{> burgers/burger_block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>



    <div class="column">
     <h2 class="eatMenu">Burgers eaten!</h2>

        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              {{> burgers/burger_block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
  
     <div class="field has-addons columns">
      <div class="control column is-half is-offset-one-quarter">
         <input class="input" type="text" id="bu" name="burger_name" placeholder="Delicious Yummy Burger">
      </div>
      <div class="control">
          <a type="submit" id="create-burger" class="button">Add Burger
        </a>
      </div>
  </div>
  




