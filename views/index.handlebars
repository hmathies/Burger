<!-- the template that Handlebars renders onto. -->

<div class="hero is-danger">
  <div class="container has-text-centered">
    <h1 class="title">
        Eat Da Burger
    </h1>
  </div>
</div>




<div class="container is-success"> 
  <div class="columns">
    <div class="column">
     <h2>Burgers to eat!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger_block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="column">
     <h2>Burgers eaten!</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger_block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
  </div>

  <div class="container">
    <div class="field is-centered">
      <h2>Add a Burger</h2>
          <label class="label">Burger Name:</label>
          <div class="control">
            <input type="text" id="bu" name="name">
          </div>

          <div class="control">
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Ready to eat!
          </div>
    <!-- the button that will submit the user input into the database.  -->
      <button type="submit">Add Burger</button>
    </div>
  </div>
</div>


